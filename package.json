{
  "name": "@vecrea/au3te-ts-hono",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/lambda.tsx",
    "zip": "zip -j lambda.zip dist/index.js",
    "dev": "wrangler dev src/index.tsx",
    "deploy": "wrangler deploy --minify src/index.tsx",
    "local:delete": "samlocal delete --no-prompts",
    "local:build": "samlocal build",
    "local:deploy": "samlocal deploy --no-confirm-changeset --no-fail-on-empty-changeset",
    "upload:css": "aws s3 sync public/css/ s3://issuer-css/",
    "localstack": "run-s local:delete local:build local:deploy upload:css"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.709.0",
    "@aws-sdk/client-secrets-manager": "^3.862.0",
    "@aws-sdk/lib-dynamodb": "^3.709.0",
    "@squilla/hono-aws-middlewares": "^1.1.1",
    "@vecrea/au3te-ts-common": "^0.1.2",
    "@vecrea/au3te-ts-server": "^0.1.4",
    "@vecrea/oid4vc-core": "^0.1.0",
    "hono": "^4.5.5",
    "u8a-utils": "^1.0.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@types/node": "^24.2.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.21.5",
    "npm-run-all2": "^8.0.4",
    "wrangler": "^4.24.3"
  }
}
